[flake8]
max-line-length = 116

ignore =
    E203  # whitespace before :
    E123
    E126
    E127
    E128
    E221
    E226
    E228
    E231
    E251
    E261
    E266 
    E302  # expect 2 blank line
    E303
    E305
    E401
    E402  # module level import not at top of file
#   E501
    W503  # line break before binary operator
    W291
    W293

exclude =
    build/**
    doc/**
    out/**

per-file-ignores =
    **/__init__.py:F401, E501
